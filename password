import string
import itertools

def generate_wordlist(output_file, characters, min_length, max_length):
    with open(output_file, 'w') as file:
        for length in range(min_length, max_length + 1):
            for word in itertools.product(characters, repeat=length):
                file.write(''.join(word) + '\n')
    print("Wordlist generated successfully!")


def main():
    characters = []
    characters.extend(string.ascii_lowercase)  # Small letters a-z
    characters.extend(string.ascii_uppercase)  # Capital letters A-Z
    characters.extend([str(num) for num in range(10)])  # Numbers 0-9
    characters.extend("@#$&!")  # Additional special characters
    
    min_length = 8
    max_length = 12
    
    output_file = "wordlist.txt"
    generate_wordlist(output_file, characters, min_length, max_length)


if __name__ == "__main__":
    main()
